<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_color_sync_black_with_5px_color_sync_gray_stroke"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_cancer"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y60"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/x10"
                android:src="@mipmap/close_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y50"
                android:text=""
                android:textColor="@color/main_color_white"
                android:textSize="@dimen/x38"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sync_user_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher_round"/>

            <TextView
                android:id="@+id/sync_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/y20"
                android:text="dsf"
                android:textColor="@color/main_color_white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y40"
            android:gravity="center"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="@dimen/x500"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_color_white_with_5px_color_black_stroke"
                android:hint="请输入登录密码"
                android:inputType="numberPassword"
                android:padding="@dimen/x20"
                android:paddingLeft="10dp"
                android:textColor="@color/sync_dialog_black"
                android:textColorHint="@color/main_goods_name"
                android:textSize="@dimen/x38"/>
        </LinearLayout>

        <TextView
            android:id="@+id/btn_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y50"
            android:layout_marginTop="@dimen/y100"
            android:background="@color/sync_dialog_gray"
            android:gravity="center"
            android:paddingBottom="@dimen/y10"
            android:paddingLeft="@dimen/x250"
            android:paddingRight="@dimen/x250"
            android:paddingTop="@dimen/y10"
            android:text="确    认"
            android:textColor="@color/white"
            android:textSize="@dimen/x35"/>
    </LinearLayout>
</LinearLayout>