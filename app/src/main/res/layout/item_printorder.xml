<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/x20"
    android:background="@drawable/bg_color_white_with_5px_color_black_stroke"
    android:orientation="vertical"
    android:padding="@dimen/y10">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_order_callid2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/y5"
            android:text="取餐号："
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/x38"/>

        <TextView
            android:id="@+id/tv_order_callid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_order_callid2"
            android:padding="@dimen/y5"
            android:text="162"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/x38"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_order_eatmethod2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/y5"
            android:text="就餐方式："
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/x38"/>

        <TextView
            android:id="@+id/tv_order_eatmethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_order_eatmethod2"
            android:padding="@dimen/y5"
            android:text="堂食"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/x38"/>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/tv_order_memberinfo_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_order_memberinfo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/y5"
            android:text="会员信息："
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/x38"/>


        <TextView
            android:id="@+id/tv_order_memberinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_order_memberinfo2"
            android:padding="@dimen/y5"
            android:text="谢**(138****0060)"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/x38"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_order_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/y5"
            android:text="下单时间："
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/x38"/>

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_order_time2"
            android:padding="@dimen/y5"
            android:text="2018-11-29 16:00:29"
            android:textColor="@color/color_444444"
            android:textSize="@dimen/x38"/>
    </RelativeLayout>

</LinearLayout>