<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="@dimen/y230"
             android:layout_margin="@dimen/x20"
             android:background="@color/white"
             android:orientation="vertical">

    <!--<com.acewill.slefpos.widgetlibrary.RoundCornerImageView-->
    <!--android:id="@+id/dish_photo"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:scaleType="centerCrop"-->
    <!--/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dish_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y170"
            android:scaleType="centerCrop"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y60">

            <TextView
                android:id="@+id/dish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="bottom|left"
                android:maxLines="2"
                android:paddingLeft="@dimen/x20"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/x28"/>

            <LinearLayout
                android:id="@+id/add_count_ly"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/half_transparent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:visibility="gone">

                <FrameLayout
                    android:id="@+id/iv_minus_counts"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="34">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_minus_light"/>
                </FrameLayout>


                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/main_color_white"/>

                <TextView
                    android:id="@+id/tv_counts"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/main_tv_black"
                    android:textSize="@dimen/x42"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/main_color_white"/>

                <FrameLayout
                    android:id="@+id/iv_plus_counts"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="34">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="34"
                        android:padding="2dp"
                        android:src="@mipmap/icon_plus_deep"/>
                </FrameLayout>
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/item_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_select"
        android:visibility="gone"/>
</FrameLayout>


