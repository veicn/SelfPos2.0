<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/colorPrimaryLight</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <style name="myRecyclerViewStyle">
        <!-- NOTE: clipChildren should be false on API level 11 or later -->
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
    </style>


    <style name="system_set_text">
        <item name="android:paddingLeft">@dimen/x10</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/x24</item>
        <item name="android:textSize">@dimen/x38</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="system_set_text_select">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/x10</item>
        <item name="android:drawableRight">@mipmap/arrow_right_gray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#bcbcbc</item>
        <item name="android:textSize">@dimen/x30</item>
    </style>

    <style name="system_set_linear">
        <item name="android:paddingLeft">@dimen/x10</item>
        <item name="android:paddingRight">@dimen/x10</item>
        <item name="android:paddingTop">@dimen/y10</item>
        <item name="android:paddingBottom">@dimen/y10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="vertical_divide_view">
        <item name="android:layout_marginRight">@dimen/x20</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y1</item>
        <item name="android:background">@color/divider</item>
    </style>


    <style name="system_set_text_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/y25</item>
        <item name="android:paddingBottom">@dimen/y25</item>
        <item name="android:layout_marginTop">@dimen/y24</item>
        <item name="android:background">@drawable/bg_color_white_with_5px_color_black_stroke</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/x28</item>
    </style>

    <!--初步设置activity进入和退出的动画-->
    <style name="activity_fade_in_out" parent="android:Animation.Activity">
        <item name="android:activityCloseExitAnimation">@anim/act_fade_out_center</item>
        <item name="android:activityCloseEnterAnimation">@anim/act_fade_out_center</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_in</item>
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
    </style>


    <style name="fade_in_out_theme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/activity_fade_in_out</item>
    </style>

    <style name="table_text">
        <item name="android:layout_margin">@dimen/x6</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/selector_press_memberloginbtn</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#111111</item>
        <item name="android:textSize">@dimen/x60</item>
    </style>


    <style name="table_text2">
        <item name="android:background">@drawable/bg_color_white_with_5px_color_no_stroke</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/x60</item>
        <item name="android:layout_margin">@dimen/x6</item>
        <item name="android:textColor">#111111</item>
    </style>

    <!-- 下划线 -->
    <style name="sty_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y1</item>
        <item name="android:background">@color/divider</item>
    </style>
</resources>
